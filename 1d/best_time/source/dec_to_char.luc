module dec_to_char (
    input dec[4],   // decimal number to convert
    output char[8]  // char of decimal number
  ){
  
  always {
    char = " ";       // set default char to " "
    
    case (dec) {
      0: char = "0";  // only consider digits 0-9
      1: char = "1";
      2: char = "2";
      3: char = "3";
      4: char = "4";
      5: char = "5";
      6: char = "6";
      7: char = "7";
      8: char = "8";
      9: char = "9";
    }
  }
}

